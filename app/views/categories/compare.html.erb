<div class="max-w-4xl mx-auto p-6 min-h-[60vh] flex flex-col justify-center">

  <%# Header %>
  <div class="text-center mb-12">
    <p class="text-sm font-semibold text-indigo-600 uppercase tracking-widest">Comparison</p>
    <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight mt-1">Which one is better?</h1>
  </div>

  <%# The Duel Container %>
  <div class="relative flex flex-col md:flex-row items-center gap-8 md:gap-4">

    <%# VS Badge (Desktop) %>
    <div
      class="
        absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 hidden md:flex
        items-center justify-center z-10
      "
    >
      <div
        class="
          bg-white border-4 border-gray-50 shadow-lg rounded-full w-14 h-14 flex
          items-center justify-center
        "
      >
        <span class="text-gray-400 font-black italic text-sm">VS</span>
      </div>
    </div>

    <% @items.each_with_index do |item, index| %>
      <div class="flex-1 w-full">
        <%= button_to vote_category_path(@category), 
            params: { 
              winner_id: item.id, 
              loser_id: (@items - [item]).first.id 
            }, 
            method: :post,
            class: "group w-full relative" do %>

          <div
            class="
              h-64 flex flex-col items-center justify-center p-8 bg-white border-2
              border-gray-200 rounded-2xl shadow-sm transition-all duration-200
              hover:border-indigo-500 hover:shadow-xl hover:-translate-y-1 active:scale-95
              text-center
            "
          >

            <%# Circular Icon/Initials %>
            <div
              class="
                w-16 h-16 mb-4 rounded-full bg-gray-100 group-hover:bg-indigo-50 flex
                items-center justify-center transition-colors
              "
            >
              <span class="text-2xl font-bold text-gray-400 group-hover:text-indigo-600">
                <%= item.name[0].upcase %>
              </span>
            </div>

            <h2
              class="
                text-2xl font-bold text-gray-800 group-hover:text-indigo-700 transition-colors
              "
            >
              <%= item.name %>
            </h2>

            <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity">
              <span
                class="
                  inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  bg-indigo-600 text-white
                "
              >
                Choose This One
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <%# VS Divider (Mobile only) %>
      <% if index == 0 %>
        <div class="md:hidden flex items-center justify-center">
          <span class="text-gray-300 font-black italic text-xl">VS</span>
        </div>
      <% end %>
    <% end %>
  </div>

  <%# Footer Actions %>
  <div class="mt-16 text-center">
    <%= link_to category_path(@category), class: "text-sm font-medium text-gray-500 hover:text-indigo-600 flex items-center justify-center gap-2 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"
        />
      </svg>
      Stop comparing and go back
    <% end %>
  </div>
</div>
