<%= form_with model: category do |f| %>
  <% if category.errors.any? %>
    <div class="name">
      <h2><%= pluralize(category.errors.count, "error") %>
        prohibited this action from being performed</h2>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>

        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
