<%= form_with(model: category, class: "space-y-6") do |f| %>

  <%# Error Messages Section %>
  <% if category.errors.any? %>
    <div class="p-4 rounded-lg bg-red-50 border border-red-200 animate-fade-in">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
        <div class="ml-3">
          <h2 class="text-sm font-bold text-red-800">
            <%= pluralize(category.errors.count, "error") %>
            prohibited this category from being saved:
          </h2>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700 space-y-1">
            <% category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <%# Form Field Card %>
  <div class="bg-white p-8 border border-gray-200 rounded-xl shadow-sm space-y-5">

    <%# Name Field %>
    <div>
      <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.text_field :name,
                   placeholder: "e.g. Electronics, Favorite Movies, etc.",
                   class:
                     "block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all placeholder:text-gray-400" %>
      <p class="mt-2 text-xs text-gray-500">Give your category a unique name to help group your items.</p>
    </div>

    <%# Submit Actions %>
    <div class="pt-4 flex items-center gap-4 border-t border-gray-50 mt-6">
      <%= f.submit "Save Category",
               class:
                 "cursor-pointer inline-flex justify-center px-6 py-3 border border-transparent text-sm font-bold rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all active:scale-95" %>

      <%= link_to "Cancel",
      categories_path,
      class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" %>
    </div>
  </div>
<% end %>
